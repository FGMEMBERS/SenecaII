<!-- mass is empty mass plus 180lbs for the pilot (never fly without one!)-->
<airplane xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../XMLSchemas/YASim.xsd" mass="3300">
    
    <!-- cruise at 75% power in 12000ft is 180ktas -->
    <cruise speed="180" alt="12000" fuel="0.75">
        <control-setting axis="/controls/engines/engine[0]/throttle" value="0.8"/>
        <control-setting axis="/controls/engines/engine[1]/throttle" value="0.8"/>
        <control-setting axis="/controls/engines/engine[0]/mixture" value="0.6"/>
        <control-setting axis="/controls/engines/engine[1]/mixture" value="0.6"/>
        <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="0.923"/>
        <control-setting axis="/controls/engines/engine[1]/propeller-pitch" value="0.923"/>
        <control-setting axis="/controls/flight/flaps" value="0.0"/>
        <control-setting axis="/controls/gear/gear-down" value="0"/>
    </cruise>
        
    <approach speed="55" aoa="14" fuel="1.0">
        <control-setting axis="/controls/engines/engine[0]/throttle" value="0.2"/>
        <control-setting axis="/controls/engines/engine[1]/throttle" value="0.2"/>
        <control-setting axis="/controls/engines/engine[0]/mixture" value="1.0"/>
        <control-setting axis="/controls/engines/engine[1]/mixture" value="1.0"/>
        <control-setting axis="/controls/engines/engine[0]/propeller-pitch" value="1.0"/>
        <control-setting axis="/controls/engines/engine[1]/propeller-pitch" value="1.0"/>
        <control-setting axis="/controls/flight/flaps" value="1.0"/>
        <control-setting axis="/controls/gear/gear-down" value="1"/>
    </approach>
    
    <cockpit x="1.15" y="0.30" z="1.70"/>
    
    <fuselage ax="4.18" ay="0" az="0.939" bx="-3.96" by="0" bz="1.19" width="1.31" taper="0.0"
        midpoint="0.36"/>
    
    <wing x="0.72" y="0.66" z="0.75" length="5.52" chord="1.58" sweep="0" incidence="0" twist="0"
        taper="1.0" dihedral="7" camber="0.143">
        <stall aoa="20" width="4" peak="1.5"/>
        <flap0 start="0.05" end=".7" lift="1.5" drag="1.2"/>
        <flap1 start=".71" end=".94" lift="1.3" drag="1.2"/>
        <control-input axis="/controls/flight/flaps" control="FLAP0"/>
        <control-input axis="/controls/flight/aileron" control="FLAP1" split="true"/>
        <control-input axis="/controls/flight/aileron-trim" control="FLAP1" split="true"/>
        <control-speed control="FLAP0" transition-time="5"/>
        <control-output control="FLAP0" prop="/surface-positions/flap-pos-norm"/>
        <control-output control="FLAP1" side="left" prop="/surface-positions/left-aileron-pos-norm"/>
        <control-output control="FLAP1" side="right"
            prop="/surface-positions/right-aileron-pos-norm"/>
    </wing>
    
    <hstab x="-3.77" y="0" z="1.27" length="2.06" chord="0.82" sweep="0" dihedral="0" taper="1.0"
        incidence="0" effectiveness="2">
        <stall aoa="20" width="4" peak="1.5"/>
        <flap0 start="0" end="1" lift="1.68" drag="1.2"/>
        <control-input axis="/controls/flight/elevator" control="FLAP0"/>
        <control-input axis="/controls/flight/elevator-trim" control="FLAP0"/>
        <control-output control="FLAP0" prop="/surface-positions/elevator-pos-norm"/>
    </hstab>
    
    <vstab x="-3.20" y="0.00" z="1.52" length="1.50" chord="1.80" sweep="45" taper="0.44">
        <stall aoa="16" width="4" peak="1.5"/>
        <flap0 start="0" end="1" lift="1.3" drag="1.2"/>
        <control-input axis="/controls/flight/rudder" control="FLAP0" invert="true"/>
        <control-input axis="/controls/flight/rudder-trim" control="FLAP0" invert="true"/>
        <control-output control="FLAP0" prop="/surface-positions/rudder-pos-norm"/>
    </vstab>

    <!-- 
        
        two engines, (l)tsio360eb 200hp at seelevel, 215hp at 12000ft at 2575rpm 
    -->
    <propeller x="2.30" y="1.85" z="1.28" mass="500" moment="12" radius="0.99" cruise-speed="180"
        cruise-rpm="2500" cruise-power="150" cruise-alt="12000" min-rpm="1600" max-rpm="2575"
        takeoff-power="215" takeoff-rpm="2575">
        <piston-engine eng-power="200" eng-rpm="2575" displacement="360" compression="7.5"
            turbo-mul="1.0" wastegate-mp="42"/>
        <actionpt x="2.76" y="1.85" z="1.32"/>
        <control-input axis="/controls/engines/engine[0]/throttle" control="THROTTLE"/>
        <control-input axis="/controls/engines/engine[0]/starter" control="STARTER"/>
        <control-input axis="/controls/engines/engine[0]/magnetos" control="MAGNETOS"/>
        <control-input axis="/controls/engines/engine[0]/mixture" control="MIXTURE"/>
        <control-input axis="/controls/engines/engine[0]/propeller-pitch" control="ADVANCE"/>
    </propeller>
    
    <propeller x="2.30" y="-1.85" z="1.28" mass="500" moment="-12" radius="0.99" cruise-speed="180"
        cruise-rpm="2500" cruise-power="150" cruise-alt="12000" min-rpm="1600" max-rpm="2575"
        takeoff-power="200" takeoff-rpm="2575">
        <piston-engine eng-power="200" eng-rpm="2575" displacement="360" compression="7.5"
            turbo-mul="1.0" wastegate-mp="42"/>
        <actionpt x="2.76" y="-1.85" z="1.32"/>
        <control-input axis="/controls/engines/engine[1]/throttle" control="THROTTLE"/>
        <control-input axis="/controls/engines/engine[1]/starter" control="STARTER"/>
        <control-input axis="/controls/engines/engine[1]/magnetos" control="MAGNETOS"/>
        <control-input axis="/controls/engines/engine[1]/mixture" control="MIXTURE"/>
        <control-input axis="/controls/engines/engine[1]/propeller-pitch" control="ADVANCE"/>
    </propeller>

    <gear x="2.97" y="0.00" z="0.0" compression="0.1">
        <control-input axis="/controls/flight/rudder" control="STEER"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="7"/>
        <control-output control="EXTEND" prop="/gear/gear[0]/position-norm"/>
    </gear>
    
    <gear x="0.827" y="1.50" z="0.0" compression="0.1">
        <control-input axis="/controls/gear/brake-left" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="8"/>
        <control-output control="EXTEND" prop="/gear/gear[1]/position-norm"/>
    </gear>
    
    <gear x="0.827" y="-1.50" z="0.0" compression="0.1">
        <control-input axis="/controls/gear/brake-right" control="BRAKE"/>
        <control-input axis="/controls/gear/brake-parking" control="BRAKE"/>
        <control-input axis="/controls/gear/gear-down" control="EXTEND"/>
        <control-speed control="EXTEND" transition-time="9"/>
        <control-output control="EXTEND" prop="/gear/gear[2]/position-norm"/>
    </gear>
    <!-- 
    
    123 gal at 6lbs per gal
    -->
    <tank x="0.72" y="2.70" z="1.04" capacity="369"/>
    <tank x="0.72" y="-2.70" z="1.05" capacity="369"/>

    <!-- move the CG to x=1.31 -->
    <ballast x="2.75" y="0" z="0.8" mass="770"/>
    
    <!-- pilot -->
    <ballast x="1.33" y="0" z="1.20" mass="180"/>
    
</airplane>
