<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../XMLSchemas/panel.xsd">
    <name>FuelSelectorPanel</name>
    <background>Aircraft/SenecaII/Instruments-3d/transparent.rgb</background>
    <w>44</w>
    <h>78</h>
    <instruments>
        <instrument>
            <name>panel hotspots</name>
            <x>22</x>
            <y>39</y>
            <w>44</w>
            <h>78</h>
            <w-base>44</w-base>
            <h-base>78</h-base>

            <actions>
                <action>
                    <name>Left increase</name>
                    <button>0</button>
                    <x>-22</x>
                    <y>0</y>
                    <w>22</w>
                    <h>39</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/controls/fuel/tank[0]/fuel_selector-position</property>
                        <step>1</step>
                        <min>-1</min>
                        <max>1</max>
                        <wrap>false</wrap>
                    </binding>
                </action>

                <action>
                    <name>Left decrease</name>
                    <button>0</button>
                    <x>-22</x>
                    <y>-39</y>
                    <w>22</w>
                    <h>39</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/controls/fuel/tank[0]/fuel_selector-position</property>
                        <step>-1</step>
                        <min>-1</min>
                        <max>1</max>
                        <wrap>false</wrap>
                    </binding>
                </action>
                
                <action>
                    <name>Right increase</name>
                    <button>0</button>
                    <x>0</x>
                    <y>0</y>
                    <w>22</w>
                    <h>39</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/controls/fuel/tank[1]/fuel_selector-position</property>
                        <step>1</step>
                        <min>-1</min>
                        <max>1</max>
                        <wrap>false</wrap>
                    </binding>
                </action>
                
                <action>
                    <name>Right decrease</name>
                    <button>0</button>
                    <x>0</x>
                    <y>-39</y>
                    <w>22</w>
                    <h>39</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/controls/fuel/tank[1]/fuel_selector-position</property>
                        <step>-1</step>
                        <min>-1</min>
                        <max>1</max>
                        <wrap>false</wrap>
                    </binding>
                </action>
            </actions>
        </instrument>
    </instruments>
</PropertyList>
