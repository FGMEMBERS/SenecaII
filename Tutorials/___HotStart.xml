<PropertyList>
  <name>Hot Start</name>
  <description>Use this Tutorial to perform a hot start. The aircraft is ready to go, engines running and all systems ready.</description>
  <interval>0</interval>

  <init>
    <interval>0</interval>
    <set>
      <property>sim/current-view/view-number</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/engines/engine[0]/alternate-air</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/engines/engine[0]/cowl-flaps-norm</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/engines/engine[0]/fuel-pump</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/engines/engine[0]/magnetos</property>
      <value>3</value>
    </set>
    <set>
      <property>controls/engines/engine[0]/mixture</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/engines/engine[0]/throttle</property>
      <value>0.03</value>
    </set>
    <set>
      <property>controls/engines/engine[0]/propeller-pitch</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/engines/engine[1]/alternate-air</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/engines/engine[1]/cowl-flaps-norm</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/engines/engine[1]/fuel-pump</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/engines/engine[1]/magnetos</property>
      <value>3</value>
    </set>
    <set>
      <property>controls/engines/engine[1]/mixture</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/engines/engine[1]/throttle</property>
      <value>0.03</value>
    </set>
    <set>
      <property>controls/engines/engine[1]/propeller-pitch</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/lighting/beacon</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/lighting/landing-lights</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/lighting/nav-lights</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/lighting/panel-norm</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/lighting/strobe</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/lighting/taxi-light</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/gear/brake-parking</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/gear/gear-down</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/fuel/tank[0]/fuel_selector-position</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/fuel/tank[1]/fuel_selector-position</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/flight/flaps</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/electric/battery-switch</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/electric/engine[0]/generator</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/electric/engine[1]/generator</property>
      <value>1</value>
    </set>
    <set>
      <property>controls/deice/prop-deice</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/deice/surface-deice</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/deice/windshield-deice</property>
      <value>0</value>
    </set>
    <set>
      <property>controls/deice/wingice-light</property>
      <value>0</value>
    </set>
    <set>
      <property>instrumentation/heading-indicator/mode-auto</property>
      <value>1</value>
    </set>
    <nasal>
      <script>
        if( props.globals.getNode( "/sim/time/sun-angle-rad" ).getValue() &gt; 1.57 ) {
          props.globals.getNode( "/controls/lighting/instruments-norm" ).setValue( 1.0 );
        }
      </script>
    </nasal>
  </init>
  <step>
    <message>
      Aircraft is ready. 
      Hit and hold 's' for 1 second to start the engines. 
    </message>
    <exit>
      <condition>
        <property>engines/engine[0]/running</property>
        <property>engines/engine[1]/running</property>
      </condition>
    </exit>
  </step>

  <end>
    <message>Have a good flight!</message>
  </end>

</PropertyList>
