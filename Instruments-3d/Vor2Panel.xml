<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../XMLSchemas/panel.xsd">
    <name>Vor2Panel</name>
    <background>Aircraft/SenecaII/Instruments-3d/transparent.rgb</background>
    <w>80</w>
    <h>80</h>
    <instruments>
        <instrument>
            <name>panel hotspots</name>
            <x>40</x>
            <y>40</y>
            <w>80</w>
            <h>80</h>
            <w-base>80</w-base>
            <h-base>80</h-base>
            
            <actions>
                <!--  obs decrease small -->
                <action>
                    <name>subsobscale decrease small</name>
                    <button>0</button>
                    <x>-40</x>
                    <y>-40</y>
                    <w>10</w>
                    <h>20</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/nav[1]/radials/selected-deg</property>
                        <step>-1</step>
                        <min>0</min>
                        <max>360</max>
                        <wrap>true</wrap>
                    </binding>
                </action>
                
                <!--  obs increase small -->
                <action>
                    <name>obs increase small</name>
                    <button>0</button>
                    <x>-30</x>
                    <y>-40</y>
                    <w>10</w>
                    <h>20</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/nav[1]/radials/selected-deg</property>
                        <step>1</step>
                        <min>0</min>
                        <max>360</max>
                        <wrap>true</wrap>
                    </binding>
                </action>
                
                <!--  obs decrease large -->
                <action>
                    <name>obs decrease large</name>
                    <button>1</button>
                    <x>-40</x>
                    <y>-40</y>
                    <w>10</w>
                    <h>20</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/nav[1]/radials/selected-deg</property>
                        <step>-5</step>
                        <min>0</min>
                        <max>360</max>
                        <wrap>true</wrap>
                    </binding>
                </action>
                
                <!--  obs increase large -->
                <action>
                    <name>obs increase large</name>
                    <button>1</button>
                    <x>-30</x>
                    <y>-40</y>
                    <w>10</w>
                    <h>20</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/nav[1]/radials/selected-deg</property>
                        <step>5</step>
                        <min>0</min>
                        <max>360</max>
                        <wrap>true</wrap>
                    </binding>
                </action>
                
            </actions>
        </instrument>
    </instruments>
</PropertyList>
