<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../XMLSchemas/panel.xsd">
    
    <name>ka51bPanel</name>
    <background>Aircraft/SenecaII/Instruments-3d/transparent.rgb</background>
    <w>26</w>
    <h>36</h>
    <instruments>
        <instrument>
            <name>panel hotspots</name>
            <x>13</x>
            <y>18</y>
            <w>26</w>
            <h>36</h>
            <w-base>26</w-base>
            <h-base>36</h-base>

            <actions>
                
                <action>
                    <name>Mode toggle</name>
                    <button>0</button>
                    <x>-13</x>
                    <y>-2</y>
                    <w>26</w>
                    <h>10</h>
                    <binding>
                        <command>property-toggle</command>
                        <property>/instrumentation/heading-indicator/mode-auto</property>
                    </binding>
                </action>
                
                <action>
                    <name>CCW</name>
                    <button>0</button>
                    <x>-13</x>
                    <y>-12</y>
                    <w>13</w>
                    <h>10</h>
                    <binding>
                        <command>property-assign</command>
                        <property>/instrumentation/heading-indicator/rotate</property>
                        <value type="int">-1</value>
                    </binding>
                    <mod-up>
                        <binding>
                            <command>property-assign</command>
                            <property>/instrumentation/heading-indicator/rotate</property>
                            <value type="int">0</value>
                        </binding>
                    </mod-up>
                </action>
                
                <action>
                    <name>CW</name>
                    <button>0</button>
                    <x>0</x>
                    <y>-12</y>
                    <w>13</w>
                    <h>10</h>
                    <binding>
                        <command>property-assign</command>
                        <property>/instrumentation/heading-indicator/rotate</property>
                        <value type="int">1</value>
                    </binding>
                    <mod-up>
                        <binding>
                            <command>property-assign</command>
                            <property>/instrumentation/heading-indicator/rotate</property>
                            <value type="int">0</value>
                        </binding>
                    </mod-up>
                </action>
                
            </actions>
        </instrument>
    </instruments>
</PropertyList>
