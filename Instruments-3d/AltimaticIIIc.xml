<PropertyList>
    <path>AltimaticIIIc.ac</path>

    <animation>
        <type>noshadow</type>
        <object-name>Altimatic</object-name>
    </animation>

    <animation>
        <type>material</type>
        <object-name>Altimatic.HdgButton</object-name>
        <object-name>Altimatic.AltButton</object-name>
        <object-name>Altimatic.PitchButton</object-name>
        <object-name>Altimatic.RollButton</object-name>
        <object-name>Altimatic.PitchWheel</object-name>
        <global>1</global>
        <emission>
            <red-prop>/sim/model/instrument-lighting/emission/red</red-prop>
            <green-prop>/sim/model/instrument-lighting/emission/green</green-prop>
            <blue-prop>/sim/model/instrument-lighting/emission/blue</blue-prop>
            <factor-prop>/controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Altimatic.RollButton</object-name>
        <property>/controls/autopilot/roll</property>
        <factor>-40</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.00910878</x-m>
            <y-m>-0.0176787</y-m>
            <z-m>0.0165364</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Altimatic.HdgButton</object-name>
        <property>/controls/autopilot/hdg</property>
        <factor>-40</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.00910878</x-m>
            <y-m>-0.0176787</y-m>
            <z-m>0.0165364</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Altimatic.AltButton</object-name>
        <property>/controls/autopilot/alt</property>
        <factor>-40</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.00910878</x-m>
            <y-m>-0.0176787</y-m>
            <z-m>0.0165364</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Altimatic.PitchButton</object-name>
        <property>/controls/autopilot/pitch</property>
        <factor>-40</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.00910878</x-m>
            <y-m>-0.0176787</y-m>
            <z-m>0.0165364</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Altimatic.RollKnob</object-name>
        <property>/controls/autopilot/roll-norm</property>
        <factor>90</factor>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0.011869</x-m>
            <y-m>-0.0384962</y-m>
            <z-m>-0.0182847</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>Altimatic.PitchWheel</object-name>
        <property>/autopilot/settings/target-pitch-deg</property>
        <factor>6</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0.0522644</y-m>
            <z-m>0.0070982</z-m>
        </center>
    </animation>

</PropertyList>
