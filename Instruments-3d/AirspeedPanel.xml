<PropertyList xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../XMLSchemas/panel.xsd">
    <name>AirspeedPanel</name>
    <background>Aircraft/SenecaII/Instruments-3d/transparent.rgb</background>
    <w>76</w>
    <h>76</h>
    <instruments>
        <instrument>
            <name>panel hotspots</name>
            <x>38</x>
            <y>38</y>
            <w>76</w>
            <h>76</h>
            <w-base>76</w-base>
            <h-base>76</h-base>

            <actions>
                <!--  small decrease -->
                <action>
                    <name>TAS small decrease</name>
                    <button>0</button>
                    <x>20</x>
                    <y>-38</y>
                    <w>9</w>
                    <h>18</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/airspeed-indicator/tas-face-rotation</property>
                        <step>-1</step>
                        <min>-10</min>
                        <max>100</max>
                    </binding>
                </action>

                <!--  large decrease -->
                <action>
                    <name>TAS large decrease</name>
                    <button>1</button>
                    <x>20</x>
                    <y>-38</y>
                    <w>9</w>
                    <h>18</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/airspeed-indicator/tas-face-rotation</property>
                        <step>-10</step>
                        <min>-10</min>
                        <max>100</max>
                    </binding>
                </action>
                
                <!--  small increase -->
                <action>
                    <name>TAS small increase</name>
                    <button>0</button>
                    <x>29</x>
                    <y>-38</y>
                    <w>9</w>
                    <h>18</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/airspeed-indicator/tas-face-rotation</property>
                        <step>1</step>
                        <min>-10</min>
                        <max>100</max>
                    </binding>
                </action>

                <!--  large increase -->
                <action>
                    <name>TAS large increase</name>
                    <button>1</button>
                    <x>29</x>
                    <y>-38</y>
                    <w>9</w>
                    <h>18</h>
                    <binding>
                        <command>property-adjust</command>
                        <property>/instrumentation/airspeed-indicator/tas-face-rotation</property>
                        <step>10</step>
                        <min>-10</min>
                        <max>100</max>
                    </binding>
                </action>
                
            </actions>
        </instrument>
    </instruments>
</PropertyList>
