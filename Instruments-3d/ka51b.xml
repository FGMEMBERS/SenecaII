<?xml version="1.0" ?>
<!--
    This is the ka51b slaving meter 3d instrument.
    Maintainer: Torsten Dreyer
-->
<PropertyList>
    <path>ka51b.ac</path>

    <animation>
        <type>rotate</type>
        <object-name>ka51b.Auto.lever</object-name>
        <property>instrumentation/heading-indicator/mode-auto</property>
        <factor>-60</factor>
        <offset-deg>60</offset-deg>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>ka51b.CCW.lever</object-name>
        <property>instrumentation/heading-indicator/rotate</property>
        <factor>30</factor>
        <axis>
            <x>0</x>
            <y>0</y>
            <z>1</z>
        </axis>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>
    
    <animation>
        <type>translate</type>
        <object-name>ka51b.Indicator</object-name>
        <property>instrumentation/heading-indicator/error-indicator</property>
        <factor>0.0021579</factor>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ka51b.Auto</object-name>
        <visible>true</visible>
        <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-toggle</command>
            <property>/instrumentation/heading-indicator/mode-auto</property>
          </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ka51b.CCW.lever.L</object-name>
        <object-name>ka51b.CCW.base.L</object-name>
        <object-name>ka51b.pick.ccw</object-name>
        <visible>true</visible>
        <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>/instrumentation/heading-indicator/rotate</property>
            <value type="int">-1</value>
          </binding>
          <mod-up>
            <binding>
              <command>property-assign</command>
              <property>/instrumentation/heading-indicator/rotate</property>
              <value type="int">0</value>
            </binding>
          </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ka51b.CCW.lever.R</object-name>
        <object-name>ka51b.CCW.base.R</object-name>
        <object-name>ka51b.pick.cw</object-name>
        <visible>true</visible>
        <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>/instrumentation/heading-indicator/rotate</property>
            <value type="int">1</value>
          </binding>
          <mod-up>
            <binding>
              <command>property-assign</command>
              <property>/instrumentation/heading-indicator/rotate</property>
              <value type="int">0</value>
            </binding>
          </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ka51b.pick.auto</object-name>
        <visible>false</visible>
        <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>/instrumentation/heading-indicator/mode-auto</property>
            <value type="int">1</value>
          </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>ka51b.pick.man</object-name>
        <visible>false</visible>
        <action>
          <button>0</button>
          <repeatable>false</repeatable>
          <binding>
            <command>property-assign</command>
            <property>/instrumentation/heading-indicator/mode-auto</property>
            <value type="int">0</value>
          </binding>
        </action>
    </animation>

    <animation>
        <type>noshadow</type>
    </animation>
    <animation>
        <type>range</type>
        <min-m>0</min-m>
        <max-m>10</max-m>
    </animation>
    
</PropertyList>
